global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'grafana'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:3000']
      
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'nodes'
    scrape_interval: 5s
    static_configs:
      - targets: ['3.249.11.40:9100']
      - targets: ['3.252.51.101:9100']


rule_files:
  - alert.rules.yml

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']

global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'grafana'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:3000']

  - job_name: 'nodes_node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['34.245.77.10:9100']
      - targets: ['34.243.247.84:9100']

  - job_name: 'nodes_prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['34.245.77.10:9090']
      - targets: ['34.243.247.84:9090']

  - job_name: 'nodes_grafana'
    scrape_interval: 5s
    static_configs:
      - targets: ['34.245.77.10:3000']
      - targets: ['34.243.247.84:3000']

rule_files:
  - alert.rules.yml

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']

- job_name: 'nodes_grafana'
    scrape_interval: 5s
    static_configs:
      - targets: ['34.245.77.10:9093']
      - targets: ['34.243.247.84:9093']
